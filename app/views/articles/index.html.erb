<h1>Listing articles</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>标签</th>
    <th>作者</th>
    <th colspan="3">可选动作</th>
  </tr>

  <% @articles.each do |article| %>
    <% article.tag_list.each do |info_tag| %>  
                 <%= info_tag %>  
               <% end %>  
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= User.find(article.user_id).name %></td>
      <td><%= link_to '显示', article_path(article) %></td>
      <td><%= link_to '编辑', edit_article_path(article) %></td>
      <td><%= link_to '删除', article_path(article),
        method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to '新建文章' , new_article_path %>
